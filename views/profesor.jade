    div(class='container')
        h1 Profesores
        br
        div(ng-app='app', ng-controller='Ctrl' class='container')
            table(class="table table-striped table-hover")
                thead
                    tr
                        th Nombre
                        th Apellido
                        th Hashtag
                tbody
                    tr(ng-repeat='tableData in tabelsData')
                        td
                            div(ng-hide='editingData[tableData.ID_PROFESOR]') {{tableData.NOMBRE}}
                            div(ng-show='editingData[tableData.ID_PROFESOR]')
                                input(type='text',class="form-control", ng-model='tableData.NOMBRE')

                        td
                            div(ng-hide='editingData[tableData.ID_PROFESOR]') {{tableData.APELLIDO}}
                            div(ng-show='editingData[tableData.ID_PROFESOR]')
                                input(type='text',class="form-control", ng-model='tableData.APELLIDO')
                        td
                            div(ng-hide='editingData[tableData.ID_PROFESOR]') {{tableData.HASHTAG}}
                            div(ng-show='editingData[tableData.ID_PROFESOR]')
                                input(type='text',class="form-control", ng-model='tableData.HASHTAG')

                        td
                            button(ng-hide='editingData[tableData.ID_PROFESOR]', ng-click='modify(tableData)', class="btn btn-primary btn-sm") Modificar
                            button(ng-hide='editingData[tableData.ID_PROFESOR]', ng-click='delete(tableData)', class="btn btn-danger btn-sm") Eliminar
                            button(ng-show='editingData[tableData.ID_PROFESOR]', ng-click='update(tableData)',  ng-style="{display:none}", class="btn btn-success btn-sm" ) Guardar
                            //button(ng-show='editingData[tableData.ID_PROFESOR]', ng-click='cancel(tableData)',  ng-style="{display:none}", class="btn btn-danger btn-sm" ) Cancelar

            button(ng-click='add()' class="btn btn-default") Agregar Profesor